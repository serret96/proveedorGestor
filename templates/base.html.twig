    <body>
    <nav class="navbar navbar-expand-lg navbar-light bg-light" >
        <div class="container-fluid">
        <ul class="navbar-nav" >
            <li class="nav-item" >
                <a class="nav-link" data-widget="pushmenu" href="#" role="button"><i class="fas fa-bars"></i></a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="{{ path('app_index') }}" class="nav-link">Home</a>
            </li>
            <li class="nav-item d-none d-sm-inline-block">
                <a href="{{ path('table') }}" class="nav-link">Table</a>
            </li>

        </ul>

        {% if app.user %}
        <ul class="navbar-nav2" >
            <li class="nav-item d-none d-sm-inline-block">

                <a  style="color: #222222" href="{{ path('app_logout') }}" class="nav-link">Logout</a>
            </li>
        </ul>
            {% else %}
                <ul class="navbar-nav2" >
                    <li class="nav-item d-none d-sm-inline-block">

                        <a  style="color: #222222" href="{{ path('app_login') }}" class="nav-link">Login</a>

                    </li>
                </ul>

        {% endif %}
        </div>
    </nav>


    {% block body %}
    {% endblock %}

