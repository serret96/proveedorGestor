{% extends 'base.html.twig' %}

{% block title %}New Proveedor!{% endblock %}

{% block body %}

    <div  style="display: flex;align-items: center;justify-content: center;margin-top: 150px;">

        <div class="card">
            <div class="card-body">

                {{ form_start(form) }}
                <label for="inputText" class="col-sm-4 col-form-label">Nombre</label>
                <div class="col-sm-10">
                    {{ form_widget(form.Nombre,{'attr':{'class':'form-control'}}) }}
                </div>


                <label for="inputText" class="col-sm-4 col-form-label">Correo</label>
                <div class="col-sm-10">
                    {{ form_widget(form.correo,{'attr':{'class':'form-control'}}) }}
                </div>

                <label for="inputText" class="col-sm-4 col-form-label">Telefono</label>
                <div class="col-sm-10">
                    {{ form_widget(form.telefono,{'attr':{'class':'form-control'}}) }}
                </div>

                <label for="inputText" class="col-sm-4 col-form-label">Tipo</label>
                <div class="col-sm-10">
                    {{ form_widget(form.tipo,{'attr':{'class':'form-control'}}) }}
                </div>

                <label for="inputText" class="col-sm-4 col-form-label">Activo</label>
                <div class="form-check form-switch">
                    {{ form_widget(form.activo,{'attr':{'class':'form-check-input', 'role':'switch'}}) }}
                </div>
                <div class="col-sm-10" style="display: flex;align-items: center;justify-content: center">

                    {{ form_widget(form.Enviar,{'attr':{'class':'btn btn-primary'}}) }}
                </div>


                <br/>

            </div>
        </div>



    </div>
    {{ form_end(form) }}
{% endblock %}
